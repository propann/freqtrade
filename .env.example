# Prod env file lives in /etc/quant-core/quant-core.env (chmod 600, root:root). Keep this file for local/dev.

# Portal / API
PORTAL_INTERNAL_PORT=8088            # Port exposé dans le conteneur portal (nginx docker le cible)
PORTAL_HTTP_PORT=8088                # Port publié par nginx docker sur 127.0.0.1
PORTAL_JWT_SECRET=change-me          # Secret pour signer les JWT utilisateurs
PORTAL_ADMIN_TOKEN=change-me         # Token admin pour X-Admin-Token / Authorization
ADMIN_EMAIL=admin@example.com        # Email admin
ADMIN_PASSWORD=change-me             # Mot de passe admin (plain, pour smoke-tests)
ADMIN_PASSWORD_HASH=$2a$10$examplehashvaluehere # Hash bcrypt pour le portail
ADMIN_TENANT_ID=admin                # Tenant lié à l'admin
PORTAL_INTERNAL_URL=http://portal:8088 # URL interne utilisée par nginx docker
PORTAL_HOST_URL=http://127.0.0.1:8088  # URL host (loopback) utilisée par les scripts
PORTAL_JWT_TTL=12h                   # TTL des JWT

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=freqtrade
POSTGRES_USER=freqtrade
POSTGRES_PASSWORD=freqtrade
POSTGRES_URI=postgresql://freqtrade:freqtrade@postgres:5432/freqtrade

# Docker / Orchestration
DOCKER_HOST=tcp://docker-socket-proxy:2375
DOCKER_NETWORK=freqtrade-aws-net
CLIENTS_DIR=/app/clients
TEMPLATES_DIR=/app/templates
CLIENT_TEMPLATES_DIR=/opt/freqtrade-aws/clients/templates
DEFAULT_CPU=1.0
DEFAULT_MEM_LIMIT=1024m
DEFAULT_PIDS_LIMIT=256
JOB_TIMEOUT=10m
ORCHESTRATOR_DRY_RUN=true
DOCKER_COMPOSE_BIN=docker
ORCHESTRATOR_URL=http://orchestrator:8090

# Billing (optional)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=
