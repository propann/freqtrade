# Core
PORTAL_HTTP_PORT=8088
PORTAL_JWT_SECRET=change-me
PORTAL_ADMIN_TOKEN=
ADMIN_EMAIL=admin@example.com
# Plaintext admin password (used by smoke tests only)
ADMIN_PASSWORD=change-me
# bcrypt hash for the admin password (use `bcryptjs` or `openssl passwd -6` to generate)
ADMIN_PASSWORD_HASH=$2a$10$examplehashvaluehere
ADMIN_TENANT_ID=admin
PORTAL_HOST_URL=http://localhost:8088
PORTAL_INTERNAL_URL=http://portal:8080
PORTAL_JWT_TTL=12h

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=freqtrade
POSTGRES_USER=freqtrade
POSTGRES_PASSWORD=freqtrade
POSTGRES_URI=postgresql://freqtrade:freqtrade@postgres:5432/freqtrade

# Docker / Orchestration
DOCKER_HOST=tcp://docker-socket-proxy:2375
DOCKER_NETWORK=freqtrade-aws-net
CLIENTS_DIR=/data/clients
DEFAULT_CPU=1.0
DEFAULT_MEM_LIMIT=1024m
DEFAULT_PIDS_LIMIT=256
ORCHESTRATOR_DRY_RUN=true
DOCKER_COMPOSE_BIN=docker

# Billing (optional)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=
